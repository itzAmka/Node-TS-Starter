{
	"name": "node-ts-starter",
	"version": "1.0.0",
	"description": "A simple NodeJS starter template with TypeScript, Prisma, Express, and more.",
	"main": "./dist/server.js",
	"scripts": {
		"build": "rimraf dist && npx tsc",
		"prestart": "npm run build",
		"start": "node dist/server.js",
		"preserve": "npm run build",
		"dev": "concurrently \"npx tsc -w\"  \"nodemon dist/server.js\"",
		"prisma": "npx prisma migrate dev --name init"
	},
	"keywords": [],
	"license": "MIT",
	"dependencies": {
		"@prisma/client": "^5.3.1",
		"express": "^4.18.2",
		"prisma": "^5.3.1",
		"rimraf": "^5.0.1"
	},
	"devDependencies": {
		"@types/express": "^4.17.17",
		"@types/node": "^20.6.2",
		"concurrently": "^8.2.1",
		"dotenv": "^16.3.1",
		"nodemon": "^3.0.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2"
	},
	"author": {
		"name": "itzAmka",
		"url": "https://amka.dev",
		"twitter": "https://twitter.com/itzAmka",
		"github": "itzAmka"
	}
}
